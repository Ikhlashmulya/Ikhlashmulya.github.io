---
import { getEntry } from "astro:content";
import BaseLayout from "../../layouts/baseLayout.astro";
const projects = await getEntry("works", "projects");
---

<BaseLayout title="works">
  <h1
    class="mt-5 text-2xl font-bold border-b-4 border-purple-600 inline-block mb-4"
  >
    Projects
  </h1>
  <ul class="mt-2">
    {
      projects.data.map((v: { title?: string; link?: string }) => (
        <a href={v.link} target="_blank">
          <li class="flex justify-between border-b-2 border-dashed border-gray-500 mb-3 hover:scale-105">
            <section class="font-semibold">{v.title}</section>
            <section>
              <svg
                xmlns="http://www.w3.org/2000/svg"
                class="dark:fill-gray-300 fill-gray-800"
                x="0px"
                y="0px"
                width="23"
                height="23"
                viewBox="0 0 24 24"
              >
                <path d="M 5 3 C 3.9069372 3 3 3.9069372 3 5 L 3 19 C 3 20.093063 3.9069372 21 5 21 L 19 21 C 20.093063 21 21 20.093063 21 19 L 21 12 L 19 12 L 19 19 L 5 19 L 5 5 L 12 5 L 12 3 L 5 3 z M 14 3 L 14 5 L 17.585938 5 L 8.2929688 14.292969 L 9.7070312 15.707031 L 19 6.4140625 L 19 10 L 21 10 L 21 3 L 14 3 z" />
              </svg>
            </section>
          </li>
        </a>
      ))
    }
  </ul>
</BaseLayout>
