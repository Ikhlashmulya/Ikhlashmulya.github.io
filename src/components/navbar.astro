---
import ThemeIcon from "./themeIcon.astro";
const pathName = Astro.url.pathname.replace(/\//g, "")
---

<nav class="w-full lg:w-6/12 mx-auto flex justify-between py-5 px-5 lg:px-0">
  <a href="/" class="active:scale-95"
    ><h1 class="text-2xl font-bold dark:text-gray-300">Ikhlashmulya</h1></a
  >
  <div id="link" class="flex gap-3 me-3 mt-1 dark:text-gray-300">
    <a
      href="/works"
      class={pathName == "works"
        ? "border-b-4 border-b-purple-600"
        : "hover:border-b-4 hover:border-b-purple-600"}>works</a
    >
    <a
      href="/blog"
      class={pathName == "blog"
        ? "border-b-4 border-b-purple-600"
        : "hover:border-b-4 hover:border-b-purple-600"}>blog</a
    >
    <ThemeIcon />
  </div>
</nav>
